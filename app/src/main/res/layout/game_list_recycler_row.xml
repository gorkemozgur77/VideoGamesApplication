<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="15dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        app:strokeWidth="2dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/game_image_id"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@drawable/ic_launcher_background" />
    </com.google.android.material.card.MaterialCardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/game_name_textview_id"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/game_rating_textview_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_below="@+id/game_name_textview_id"/>
        <TextView
            android:id="@+id/game_relasedate_textview_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:layout_below="@+id/game_rating_textview_id"
            android:textSize="14sp"/>

    </RelativeLayout>

</LinearLayout>