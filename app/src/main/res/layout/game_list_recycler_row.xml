<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <ImageView
        android:id="@+id/game_image_id"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/game_name_textview_id"
            android:text="Name Of Game"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/game_rating_textview_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ratings"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_below="@+id/game_name_textview_id"/>
        <TextView
            android:id="@+id/game_relasedate_textview_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/game_rating_textview_id"
            android:layout_below="@+id/game_name_textview_id"
            android:text="relased"
            android:textSize="15sp"
            android:layout_marginStart="15dp"/>

    </RelativeLayout>

</LinearLayout>